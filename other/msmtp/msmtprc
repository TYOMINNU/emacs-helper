# 1. 安装msmtp-gnome包
# 2. 运行命令:
#    cd  /usr/share/doc/msmtp-gnome/scripts/
#    python ./msmtp-gnome-tool.py --username=USERNAME --server=SERVER

defaults
tls on
tls_certcheck off
tls_starttls on

account default
host smtp.gmail.com
domain smtp.gmail.com
tls on
tls_certcheck off
tls_starttls on
auth on
user USER@gmail.com
from USER@gmail.com
# password PASSWORD
port 587
logfile /home/user/.msmtp.log
